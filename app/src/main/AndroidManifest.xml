<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="universe.sortalgorithmssimulation">
	
	<application
		android:name=".SortAlogirthmsApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity android:name=".activity.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".activity.TestActivity"
			android:launchMode="singleTop" />
		<activity android:name=".activity.SimulationActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".activity.TestActivity" />
		</activity>
		<activity android:name=".activity.InfoActivity" android:theme="@style/AppTheme.Translucent"></activity>
	</application>

</manifest>